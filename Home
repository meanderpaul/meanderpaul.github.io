        <!-- Footer -->
        <footer class="bg-green-900 text-green-200 mt-12 py-6">
            <div class="container mx-auto px-4 text-center">
                <p>&copy; <span id="current-year"></span> Wildland Pest Control. All rights reserved.</p>
                <p class="text-sm">Serving Plymouth, MA and surrounding towns.</p>
            </div>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set current year in footer
            document.getElementById('current-year').textContent = new Date().getFullYear();

            // --- SEO Data ---
            // Store the titles and descriptions for each page
            const pageSeo = {
                'home': {
                    'title': 'Wildland Pest Control | Plymouth, MA',
                    'description': 'Environmentally-friendly pest and critter control in Plymouth, MA. Wildland Pest Control offers safe, effective solutions for ticks, rodents, grubs, and insects. Get a free consultation.'
                },
                'services': {
                    'title': 'Pest Control Services | Wildland Pest Control',
                    'description': 'Our local pest and critter control services include rodent contraceptive, tick/grub control, and perimeter spraying. Serving Plymouth, MA, Kingston, Carver, and more.'
                },
                'diy': {
                    'title': 'DIY Pest Control Tips | Wildland Pest Control',
                    'description': 'Learn effective DIY pest and critter control from the experts. How to make homemade tick tubes and safe Borax ant treatments to protect your home.'
                },
                'faq': {
                    'title': 'Pest Control FAQ | Wildland Pest Control',
                    'description': 'Pest and critter questions? Our FAQ answers common questions about mice, rats, ticks in Massachusetts, and the difference between moles and voles. Get answers now.'
                },
                'safety': {
                    'title': 'Safety, Labels & SDS | Wildland Pest Control',
                    'description': 'View safety info, product labels, SDS, and use our educational LD50 calculator. Not a substitute for professional veterinary advice.'
                },
                'contact': {
                    'title': 'Contact Us | Wildland Pest Control',
                    'description': 'Contact Wildland Pest Control today for a free consultation. Call or email us to schedule your environmentally-safe pest and critter control service in the Plymouth, MA area.'
                }
            };
            const metaDescriptionTag = document.getElementById('meta-description');

            // --- Page Navigation Logic ---
            const allPages = document.querySelectorAll('.page-content');
            const navLinks = document.querySelectorAll('.nav-link');
            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuButton = document.getElementById('mobile-menu-button');

            function showPage(pageId) {
                // Hide all pages
                allPages.forEach(page => {
                    page.classList.add('hidden');
                });

                // Show the target page
                const targetPage = document.getElementById(pageId);
                if (targetPage) {
                    targetPage.classList.remove('hidden');
                }

                // --- Update SEO ---
                const seoData = pageSeo[pageId] || pageSeo['home'];
                document.title = seoData.title;
                metaDescriptionTag.setAttribute('content', seoData.description);

                // Update active state for desktop nav
                navLinks.forEach(link => {
                    if (link.dataset.page === pageId) {
                        link.classList.add('nav-link-active');
                    } else {
                        link.classList.remove('nav-link-active');
                    }
                });

                // Update active state for mobile nav
                mobileNavLinks.forEach(link => {
                    if (link.dataset.page === pageId) {
                        link.classList.add('mobile-nav-link-active');
                    } else {
                        link.classList.remove('mobile-nav-link-active');
                    }
                });

                // Hide mobile menu after selection
                mobileMenu.classList.add('hidden');

                // Scroll to top of page
                window.scrollTo(0, 0);
            }

            // Add click listeners to all nav links (desktop)
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.dataset.page;
                    showPage(pageId);
                });
            });

             // Add click listeners to all nav links (mobile)
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.dataset.page;
                    showPage(pageId);
                });
            });

            // --- Mobile Menu Toggle ---
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });

            // --- FAQ Accordion Logic ---
            const faqToggles = document.querySelectorAll('.faq-toggle');

            faqToggles.forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('.faq-icon svg');
                    
                    // Toggle visibility of the content
                    content.classList.toggle('hidden');

                    // Rotate icon
                    if (content.classList.contains('hidden')) {
                        icon.style.transform = 'rotate(0deg)';
                    } else {
                        icon.style.transform = 'rotate(180deg)';
                    }
                });
            });

            // --- LD50 Calculator Logic ---
            const calculateBtn = document.getElementById('calculate-ld50');
            const weightInput = document.getElementById('animal-weight');
            // REMOVED AI INPUT
            const resultDiv = document.getElementById('ld50-result');
            const resultText = resultDiv.querySelector('p');

            calculateBtn.addEventListener('click', function() {
                const weightLbs = parseFloat(weightInput.value);
                // REMOVED AI PARSE
                // UPDATED: 1 oz (28349.5mg) * 0.005% (0.00005) = 1.417475 mg
                const aiPerBlock = 1.417475; 
                
                // UPDATED Validation
                if (isNaN(weightLbs) || weightLbs <= 0) {
                    resultText.innerHTML = '<span class="font-semibold text-red-600">Please enter a valid, positive number for weight.</span>';
                    resultDiv.classList.remove('hidden');
                    return;
                }
                
                // --- Calculation ---
                // 1. Convert lbs to kg
                const weightKg = weightLbs * 0.453592;
                
                // 2. Calculate total mg for LD50 (using your provided 1.47 mg/kg ratio)
                const totalMgLD50 = weightKg * 1.47;
                
                // 3. Calculate number of blocks
                const blocksToConsume = totalMgLD50 / aiPerBlock;
                
                // 4. Display result
                resultText.innerHTML = `A theoretical LD50 dose for a <span class="font-semibold">${weightLbs} lb</span> animal would require consuming <span class="font-semibold">${blocksToConsume.toFixed(2)}</span> blocks.`;
                resultDiv.classList.remove('hidden');
            });

        });
    </script>

</body>
</html>




